# Permit.io Configuration
# Copy this file to .env and fill in your values

# Required: Your Permit.io API key
PERMIT_API_KEY=your-api-key-here

# Cloud API URL (default: https://api.permit.io/v2)
PERMIT_API_URL=https://api.permit.io/v2

# Edge PDP URL (default: http://localhost:7766)
# ABAC requires Edge PDP - Cloud PDP does NOT support ABAC!
PERMIT_PDP_URL=http://localhost:7766

# Project ID (default: default)
PERMIT_PROJECT_ID=default

# Environment ID (default: dev)
PERMIT_ENV_ID=dev
